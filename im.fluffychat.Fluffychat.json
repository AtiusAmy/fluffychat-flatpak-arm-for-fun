{
    "app-id": "im.fluffychat.Fluffychat",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "command": "fluffychat",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--own-name=chat.fluffy.fluffychat"
    ],
    "modules": [
        {
            "name": "libjsoncpp",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/1.9.4.tar.gz",
                    "sha256": "e34a628a8142643b976c7233ef381457efad79468c67cb1ae0b83a33d7493999"
                }
            ]
        },
        {
            "name": "olm",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.matrix.org/matrix-org/olm.git",
                    "tag": "3.2.1"
                }
            ]
        },
        {
            "name": "fluffychat",
            "buildsystem": "simple",
            "only-arches": [
                "x86_64",
                "aarch64"
            ],
            "build-commands": [
                "ls fluffychat",
                "cp -r fluffychat /app/fluffychat",
                "chmod +x /app/fluffychat/fluffychat",
                "install -Dm644 /app/fluffychat/data/flutter_assets/assets/logo.svg /app/share/icons/hicolor/scalable/apps/im.fluffychat.Fluffychat.svg",
                "mkdir /app/bin",
                "ln -s /usr/lib/x86_64-linux-gnu/libsqlite3.so.0 /app/lib/libsqlite3.so",
                "if [ ! -e '/app/lib/libsqlite3.so' ]; then ln -s -f /usr/lib/aarch64-linux-gnu/libsqlite3.so.0 /app/lib/libsqlite3.so; fi",
                "ln -s /app/fluffychat/fluffychat /app/bin/fluffychat",
                "install -Dm644 im.fluffychat.Fluffychat.desktop /app/share/applications/im.fluffychat.Fluffychat.desktop",
                "install -Dm644 im.fluffychat.Fluffychat.metainfo.xml /app/share/appdata/im.fluffychat.Fluffychat.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://gitlab.com/api/v4/projects/16112282/packages/generic/fluffychat/0.35.0/fluffychat-linux-x86.tar.gz",
                    "dest": "fluffychat",
                    "sha256": "b63a2ad4b98e364e371e66a40b520eda934d5274ffd0817aa74b7cc4afc88854",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://gitlab.com/api/v4/projects/famedly%2Ffluffychat/releases/",
                        "version-query": ".[0] | .tag_name | sub(\"v\";\"\")",
                        "url-query": ".[0] | .assets  | .links[] | select(.name==\"fluffychat-linux-x86.tar.gz\") | .url"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://gitlab.com/api/v4/projects/16112282/packages/generic/fluffychat/0.35.0/fluffychat-linux-arm64.tar.gz",
                    "dest": "fluffychat",
                    "sha256": "3565ef641f7d1f8611a3fca4fff259dfe7db6e05c04fbf7314d404902adcb632",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://gitlab.com/api/v4/projects/famedly%2Ffluffychat/releases/",
                        "version-query": ".[0] | .tag_name | sub(\"v\";\"\")",
                        "url-query": ".[0] | .assets  | .links[] | select(.name==\"fluffychat-linux-arm64.tar.gz\") | .url"
                    }
                },
                {
                    "type": "file",
                    "path": "im.fluffychat.Fluffychat.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "im.fluffychat.Fluffychat.desktop"
                }
            ]
        }
    ]
}
