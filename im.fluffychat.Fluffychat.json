{
    "app-id": "im.fluffychat.Fluffychat",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "fluffychat",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--own-name=chat.fluffy.fluffychat"
    ],
    "modules": [
        {
            "name": "olm",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.matrix.org/matrix-org/olm.git",
                    "tag": "3.2.1"
                }
            ]
        },
        {
            "name": "fluffychat",
            "buildsystem": "simple",
            "only-arches": [
                "x86_64", "aarch64"
            ],
            "build-commands": [
                "ls fluffychat",
                "cp -r fluffychat /app/fluffychat",
                "chmod +x /app/fluffychat/fluffychat",
                "install -Dm644 /app/fluffychat/data/flutter_assets/assets/logo.svg /app/share/icons/hicolor/scalable/apps/im.fluffychat.Fluffychat.svg",
                "mkdir /app/bin",
                "ln -s /usr/lib/x86_64-linux-gnu/libsqlite3.so.0 /app/lib/libsqlite3.so",
                "if [ ! -e '/app/lib/libsqlite3.so' ]; then ln -s -f /usr/lib/aarch64-linux-gnu/libsqlite3.so.0 /app/lib/libsqlite3.so; fi",
                "ln -s /app/fluffychat/fluffychat /app/bin/fluffychat",
                "install -Dm644 im.fluffychat.Fluffychat.desktop /app/share/applications/im.fluffychat.Fluffychat.desktop",
                "install -Dm644 im.fluffychat.Fluffychat.metainfo.xml /app/share/appdata/im.fluffychat.Fluffychat.metainfo.xml"

            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": ["x86_64"],
                    "url": "https://gitlab.com/famedly/fluffychat/-/package_files/12621014/download",
                    "dest-filename": "fluffychat-linux-x86.tar.gz",
                    "dest": "fluffychat",
                    "sha256": "1efe6beb9b557e05dc250d2ce9f2fd39bdc759210914932cdb2660af1cbe0dde"
                },
                {
                    "type": "archive",
                    "only-arches": ["aarch64"],
                    "url": "https://gitlab.com/famedly/fluffychat/-/package_files/12621016/download",
                    "dest-filename": "fluffychat-linux-arm64.tar.gz",
                    "dest": "fluffychat",
                    "sha256": "83143d2cb5e2ad7363d482bf820ba328b49c23cc758afc398b605a23ae67beb2"
                },
                {
                    "type": "file",
                    "path": "im.fluffychat.Fluffychat.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "im.fluffychat.Fluffychat.desktop"
                }

            ]
        
        }
    ]
}
